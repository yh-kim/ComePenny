<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/idea_list_back"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_company"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ex1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:paddingLeft="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="9dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Writer : "
                    android:textColor="#959595"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_UserId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jihoon1234"
                    android:textColor="#535353"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_idea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:maxLines="1"
                android:layout_weight="1"
                android:text="Ideas Worth Sharing" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:background="@drawable/idea_bar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="right"
                android:layout_marginRight="6dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="view : "
                        android:textColor="#959595"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tv_count_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="231234"
                        android:layout_marginRight="12dp"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="like : "
                        android:textColor="#959595"

                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_count_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1234"

                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>