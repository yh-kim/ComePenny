<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="5dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/idea_list_back"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Writer : "
                        android:textColor="#959595"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_UserId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="jihoon1234"
                        android:textColor="#535353"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView

                    android:id="@+id/iv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:layout_marginLeft="200dp"
                    android:paddingTop="4dp"
                    android:paddingRight="4dp"
                    android:src="@drawable/ct" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_idea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:textStyle="normal"
                android:layout_weight="1"
                android:paddingBottom="13dp"
                android:text="적외선으로 상대의 위치를 추적하는 적외선 탐색 추적 장비와 야간에도 적을 물리친다.  " />

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:background="@drawable/line2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Homo Erectus"
                    android:textSize="13dp"
                    android:textColor="#29c5e4"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:paddingLeft="9dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="view : "
                        android:textColor="#959595"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_count_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="231234"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="9dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="like : "
                        android:textColor="#959595"

                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_count_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1234"

                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>